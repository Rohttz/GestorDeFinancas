{
  "name": "finance-backend",
  "version": "0.0.1",
  "description": "Backend API for Gestor de Finan√ßas",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "prestart": "npm run db:prepare",
    "prestart:dev": "npm run db:prepare",
    "build": "nest build",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "jest",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./src/database/data-source.ts",
    "seed": "ts-node -r tsconfig-paths/register ./src/database/seeds/seed.ts",
    "seed:default-categories": "ts-node -r tsconfig-paths/register ./src/scripts/seed-default-categories.ts",
    "db:create": "ts-node -r tsconfig-paths/register ./src/scripts/create-database.ts",
    "db:prepare": "npm run db:create && npm run migration:run && npm run seed:default-categories"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/config": "^3.1.0",
    "@nestjs/typeorm": "^10.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "pg": "^8.11.0",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "bcryptjs": "^2.4.3",
    "@nestjs/mapped-types": "^2.0.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.17",
    "@types/node": "^18.16.18",
    "ts-node": "^10.9.1",
    "typescript": "5.3.3",
    "eslint": "^8.46.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "prettier": "^3.3.3",
    "@types/bcryptjs": "^2.4.2",
    "tsconfig-paths": "^4.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "license": "MIT"
}
